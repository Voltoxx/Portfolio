
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Portfolio.Controllers
@inject UserController UserController


<ul class="navbar-nav">
	@if (UserController.GetUserConnected() != null )
	{
		<li class="nav-item">
			<a  class="nav-link text-dark" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
		</li>
		<li class="nav-item">
			<form  class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Portfolio", new { area = "" })">
				<button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="User" asp-action="ViewRegister">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="User" asp-action="ViewLogin">Login</a>
		</li>
	}
</ul>