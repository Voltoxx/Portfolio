@using Portfolio.Repositories
@using Portfolio.Services
@inject UserRepository UserRepository
@inject AuthenticationService Auth

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Portfolio" asp-action="Index">Portfolio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Portfolio" asp-action="Index">Accueil</a>
                        </li>
	                    <li class="nav-item">
		                    <a class="nav-link text-dark" asp-area="" asp-controller="Portfolio" asp-action="Profil">Profil</a>
	                    </li>
	                    <li class="nav-item">
		                    <a class="nav-link text-dark" asp-area="" asp-controller="Portfolio" asp-action="Projects">Projets</a>
	                    </li>
	                    <li class="nav-item">
		                    <a class="nav-link text-dark" asp-area="" asp-controller="Portfolio" asp-action="Contact">Contact</a>
	                    </li>
                        @if (UserRepository.IsAdmin(Auth.GetUserConnected()))
                        {
	                        <li class="nav-item">
		                        <a class="nav-link text-dark" asp-area="" asp-controller="Portfolio" asp-action="Manage">Edit Project</a>
	                        </li>
                        }
                    </ul>
                    <partial name="_Login" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
	    <div class="container text-center" >
            <a asp-area="" asp-controller="Portfolio" asp-action="LegalMentions">Mentions légales</a> - <a asp-area="" asp-controller="Portfolio" asp-action="PrivacyPolicies">Politique de confidentialité</a> - <a asp-area="" asp-controller="Portfolio" asp-action="CookieManagement">Gestion des cookies</a> - <a asp-area="" asp-controller="Portfolio" asp-action="SiteMap">Plan du site</a>
            <p>Tout droit réservés 2023  &copy; Made by Arthur Philippe</p>
	    </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
