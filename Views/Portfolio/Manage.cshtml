@model IEnumerable<Portfolio.Models.Projets>

@{
	ViewData["Title"] = "Projects";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Projects</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Description)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ImagePrincipale)
		</th>
		<th>
				@Html.DisplayNameFor(model => model.Categorie)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FirstImage)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SecondImage)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ThirdImage)
		</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Description)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ImagePrincipale)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Categorie)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FirstImage)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SecondImage)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ThirdImage)
			</td>
			<td>
				<a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
				<a asp-action="GetOneProject" asp-route-id="@item.Id">Details</a> |
				<a asp-action="DeleteOneProject" asp-route-id="@item.Id">Delete</a>
			</td>
		</tr>
	}
	</tbody>
</table>