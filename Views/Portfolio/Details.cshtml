@model Portfolio.Models.Projets

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<table class="table">
	<tbody>
	<tr>
		<td>Title:</td>
		<td>@Html.DisplayFor(model => model.Title)</td>
	</tr>
	<tr>
		<td>Description:</td>
		<td>@Html.DisplayFor(model => model.Description)</td>
	</tr>
	<tr>
		<td>Image Principale:</td>
		<td><img alt="Image de @Model.Title" src="@Model.ImagePrincipale" /></td>
	</tr>
	<tr>
		<td>Catégorie:</td>
		<td>@Html.DisplayFor(model => model.Categorie)</td>
	</tr>
	<tr>
		<td>Première Image:</td>
		<td><img alt="Image de @Model.Title" src="@Model.FirstImage" /></td>
	</tr>
	<tr>
		<td>Deuxième Image:</td>
		<td><img alt="Image de @Model.Title" src="@Model.SecondImage" /></td>
	</tr>
	<tr>
		<td>Troisième Image:</td>
		<td><img alt="Image de @Model.Title" src="@Model.ThirdImage" /></td>
	</tr>
	</tbody>
</table>

<div>
	<a asp-action="Projects">Back to List</a>
</div>